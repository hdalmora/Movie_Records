<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/side_nav_bar"
    android:gravity="bottom"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/nav_drawer_bg_imageview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha=".6"
        android:scaleType="centerCrop"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="12dp"
        app:srcCompat="@mipmap/movie_records_logo_v3"/>
    <!--app:srcCompat="@android:drawable/sym_def_app_icon"-->

    <RelativeLayout
        android:id="@+id/nav_name_relativelayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingBottom="5dp"
        android:layout_below="@+id/imageView">

        <TextView
            android:id="@+id/nav_bemvindo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_bem_vindo"
            android:layout_marginTop="4dp"
            android:layout_marginRight="5dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <TextView
            android:id="@+id/nav_drawer_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="'User'"
            android:layout_toRightOf="@+id/nav_bemvindo"
            android:layout_marginBottom="0dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/nav_drawer_edit_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/nav_drawer_user_name"
            android:layout_marginTop="1dp"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:src="@drawable/ic_edit" />

    </RelativeLayout>



    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:paddingLeft="10dp"
        android:layout_below="@+id/nav_name_relativelayout"
        android:layout_height="wrap_content"
        android:text="@string/str_organize_seus_filmes" />

</RelativeLayout>
