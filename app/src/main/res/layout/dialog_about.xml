<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:background="#E6373F51">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:padding="0dp">

        <ImageView
            android:id="@+id/dialog_about_logo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"/>

        <TextView
            android:id="@+id/dialog_about_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Movie Records"
            android:textSize="30sp"
            android:layout_centerHorizontal="true"/>

        <ImageButton
            android:id="@+id/btn_close"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/ic_close"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="@null" />

        <TextView
            android:id="@+id/dialog_about_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialog_about_title"
            android:layout_centerHorizontal="true"
            android:text="Versão: 0.1.0"/>

        <TextView
            android:id="@+id/dialog_about_deselvolvido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialog_about_version"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:textSize="17sp"
            android:fontFamily="sans-serif-thin"
            android:text="Desenvolvido e criado por"/>

        <TextView
            android:id="@+id/dialog_about_nome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialog_about_deselvolvido"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif-thin"
            android:textStyle="italic"
            android:layout_marginTop="8dp"
            android:text="Henrique Dal' Mora"/>

        <TextView
            android:id="@+id/dialog_about_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialog_about_nome"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif-thin"
            android:textStyle="italic"
            android:layout_marginTop="2dp"
            android:text="movierecords_dev@gmail.com"/>

        <View
            android:id="@+id/dialog_about_divisor_1"
            android:layout_width="320dp"
            android:layout_height="1dp"
            android:layout_marginTop="7dp"
            android:layout_below="@+id/dialog_about_email"
            android:layout_centerHorizontal="true"
            android:background="#59000000" />

        <LinearLayout
            android:id="@+id/dialog_about_ggogle_play_ll"
            android:layout_marginTop="10dp"
            android:layout_below="@id/dialog_about_divisor_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4"
            android:padding="15dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Aplicação Gratuita, sem limitações de quaisquer funcionalidades"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/google_play"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Avalie o\naplicativo"
                android:layout_gravity="center_vertical"
                android:textSize="12sp"/>

        </LinearLayout>

        <View
            android:id="@+id/dialog_about_divisor_2"
            android:layout_width="320dp"
            android:layout_height="1dp"
            android:layout_marginTop="7dp"
            android:layout_below="@id/dialog_about_ggogle_play_ll"
            android:layout_centerHorizontal="true"
            android:background="#59000000" />

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/dialog_omdb_credit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_below="@id/dialog_about_divisor_2"
            android:text="This poduct uses the OMDb API"
            android:layout_centerHorizontal="true"
            android:textSize="12sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:layout_below="@id/dialog_omdb_credit"
            android:text="This poduct is not endorsed or certified by TMDb"
            android:layout_centerHorizontal="true"
            android:textSize="12sp"/>

    </RelativeLayout>



</RelativeLayout>